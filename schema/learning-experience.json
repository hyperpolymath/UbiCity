{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://ubicity.learning/schema/learning-experience.json",
  "title": "UbiCity Learning Experience",
  "description": "A structured capture of a learning moment in urban space",
  "type": "object",
  "required": ["id", "timestamp", "learner", "context", "experience"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this learning experience",
      "pattern": "^ubi-[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When this learning experience occurred"
    },
    "learner": {
      "type": "object",
      "description": "Information about the learner (anonymizable)",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Pseudonymous learner identifier"
        },
        "background": {
          "type": "array",
          "description": "Disciplinary backgrounds (for connection analysis)",
          "items": {
            "type": "string"
          }
        },
        "interests": {
          "type": "array",
          "description": "Current learning interests",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "context": {
      "type": "object",
      "description": "Urban context where learning occurred",
      "required": ["location"],
      "properties": {
        "location": {
          "type": "object",
          "description": "Physical location details",
          "properties": {
            "name": {
              "type": "string",
              "description": "Human-readable location name"
            },
            "coordinates": {
              "type": "object",
              "properties": {
                "lat": {
                  "type": "number",
                  "minimum": -90,
                  "maximum": 90
                },
                "lon": {
                  "type": "number",
                  "minimum": -180,
                  "maximum": 180
                }
              }
            },
            "type": {
              "type": "string",
              "enum": [
                "public_space",
                "institution",
                "workshop",
                "studio",
                "library",
                "cafe",
                "street",
                "park",
                "gallery",
                "lab",
                "other"
              ]
            }
          }
        },
        "situation": {
          "type": "string",
          "description": "What was happening in this location"
        },
        "connections": {
          "type": "array",
          "description": "Who else was involved",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["peer", "mentor", "practitioner", "stranger", "community"]
              },
              "id": {
                "type": "string",
                "description": "Pseudonymous identifier if consent given"
              }
            }
          }
        }
      }
    },
    "experience": {
      "type": "object",
      "description": "The learning experience itself",
      "required": ["type", "description"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "observation",
            "experiment",
            "failure",
            "discovery",
            "collaboration",
            "insight",
            "question",
            "practice",
            "reflection"
          ],
          "description": "Type of learning experience"
        },
        "description": {
          "type": "string",
          "description": "What was learned or attempted"
        },
        "domains": {
          "type": "array",
          "description": "Disciplinary domains involved",
          "items": {
            "type": "string"
          }
        },
        "artifacts": {
          "type": "array",
          "description": "Things created or used",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["photo", "sketch", "note", "code", "recording", "object", "document"]
              },
              "uri": {
                "type": "string",
                "description": "Location of artifact"
              },
              "description": {
                "type": "string"
              }
            }
          }
        },
        "outcome": {
          "type": "object",
          "description": "What happened as a result",
          "properties": {
            "success": {
              "type": "boolean",
              "description": "Whether the experiment succeeded (failures are valuable!)"
            },
            "next_questions": {
              "type": "array",
              "description": "Questions that emerged",
              "items": {
                "type": "string"
              }
            },
            "connections_made": {
              "type": "array",
              "description": "Unexpected connections discovered",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "privacy_level": {
          "type": "string",
          "enum": ["public", "community", "private"],
          "default": "community"
        },
        "related_experiences": {
          "type": "array",
          "description": "IDs of related learning experiences",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
